# ============================================
# FastBase AI - Environment Configuration
# ============================================
# Copy this file to .env and update with your values
# cp base/env.example .env

# ==================== OpenAI Configuration ====================
# Required: Primary OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Secondary OpenAI API Key (for fallback or load balancing)
# OPENAI_API_KEY_SECONDARY=your_secondary_openai_api_key_here

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o-mini
# OPENAI_MODEL_FALLBACK=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
# OPENAI_MAX_TOKENS=4096
# OPENAI_TIMEOUT=30

# Optional: OpenAI Organization
# OPENAI_ORGANIZATION=org-your_org_id

# ==================== MongoDB Configuration ====================
# MongoDB Connection String
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=fastbase

# Optional: MongoDB Connection Options
# MONGODB_MAX_POOL_SIZE=100
# MONGODB_MIN_POOL_SIZE=10
# MONGODB_CONNECT_TIMEOUT=20000

# ==================== SQL Database Configuration ====================
# PostgreSQL Configuration (choose one: PostgreSQL or MySQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mydb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
# POSTGRES_SSL_MODE=prefer

# MySQL Configuration (alternative to PostgreSQL)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=mydb
# MYSQL_USER=root
# MYSQL_PASSWORD=your_mysql_password
# MYSQL_CHARSET=utf8mb4

# Optional: Force database type (auto-detect if not set)
# SQL_DATABASE_TYPE=postgres
# SQL_DATABASE_TYPE=mysql

# ==================== External API Keys ====================
# Uncomment and configure as needed for external services

# Vector Database APIs
# PINECONE_API_KEY=your_pinecone_api_key
# QDRANT_API_KEY=your_qdrant_api_key

# Other AI Services
# ANTHROPIC_API_KEY=your_anthropic_api_key
# COHERE_API_KEY=your_cohere_api_key

# Embedding Services
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==================== Application Configuration ====================
APP_NAME=FastBase AI
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# API Configuration
API_PREFIX=/api/v1
# API_TITLE=FastBase AI API
# API_DESCRIPTION=AI Text Generation API with Graph and Services

# CORS Configuration
CORS_ORIGINS=*
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ==================== Logging Configuration ====================
LOG_LEVEL=INFO
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_FILE=logs/app.log

# ==================== Graph Configuration ====================
GRAPH_MAX_ITERATIONS=50
# GRAPH_TIMEOUT=300

# Retriever Configuration
RETRIEVER_TOP_K=5
# RETRIEVER_SCORE_THRESHOLD=0.7

# ==================== Security Configuration ====================
# Optional: API Secret Key for protecting endpoints
# API_SECRET_KEY=your_secret_key_here

# Rate Limiting
# RATE_LIMIT_ENABLED=False
# RATE_LIMIT_PER_MINUTE=60

